<Window x:Class="gfxTabletClient.CapabilityViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gfxTabletClient"
        mc:Ignorable="d"
        Title="CapabilityViewWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="mListView" HorizontalAlignment="Left" Height="399" VerticalAlignment="Top" Width="567" Margin="10,10,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="mTxtClickHere" TextWrapping="Wrap" Text="Tap or touch to get info" Margin="579,10,10,10" StylusDown="MTxtClickHere_StylusDown" IsReadOnly="True" IsUndoEnabled="False" TextAlignment="Center"/>

    </Grid>
</Window>
